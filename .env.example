# Configurazione per Vercel Deployment
# Copia questo file in .env.local per lo sviluppo locale

# Admin credentials (leave empty to generate random secure password)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=

# Site configuration
SITE_NAME=GuadagnareConETF
BLOG_TITLE="Guadagnare con ETF"
BLOG_DESCRIPTION="Il tuo portale per investimenti ETF intelligenti"
BLOG_URL=https://your-domain.vercel.app

# Configurazione AI
AI_MODEL_NAME=gpt-3.5-turbo
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7

# Configurazione Storage
STORAGE_TYPE=file
# Per database futuro:
# STORAGE_TYPE=database
# DATABASE_URL=your_database_connection_string

# Configurazione API
API_TIMEOUT=600
MAX_ARTICLES_PER_REQUEST=5

# Configurazione Sicurezza (per produzione)
# JWT_SECRET=your_jwt_secret
# CORS_ORIGIN=https://your-domain.vercel.app

# Debug
DEBUG=false
LOG_LEVEL=info

# Security note:
# Never commit .env file to version control
# Use strong, unique passwords in production
# Consider using environment variables or secure key management systems